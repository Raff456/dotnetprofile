<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>ProfileSite - @ViewBag.Title</title>

  <!-- Bootstrap -->
  <!-- <link href="@Url.Content("/css/bootstrap.css")" rel="stylesheet"> -->
  <!-- <link href="@Url.Content("/css/modern-business.css")" rel="stylesheet"> -->

  <link href="@Url.Content("/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
  <!-- Custom fonts for this template -->
  <link href="@Url.Content("/vendor/fontawesome-free/css/all.min.css")" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

  <!-- Custom styles for this template -->
  <link href="@Url.Content("/css/agency.min.css")" rel="stylesheet">

  <!-- Libraries CSS Files -->
  <link href="@Url.Content("/lib/nivo-slider/css/nivo-slider.css")" rel="stylesheet">
  <link href="@Url.Content("/lib/owlcarousel/owl.carousel.css")" rel="stylesheet">
  <link href="@Url.Content("/lib/owlcarousel/owl.transitions.css")" rel="stylesheet">
  <link href="@Url.Content("/lib/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
  <link href="@Url.Content("/lib/animate/animate.min.css")" rel="stylesheet">
  <link href="@Url.Content("/lib/venobox/venobox.css")" rel="stylesheet">

  <!-- Nivo Slider Theme -->
  <link href="@Url.Content("/css/nivo-slider-theme.css")" rel="stylesheet">

  <!-- Main Stylesheet File -->

  <!-- Responsive Stylesheet File -->
  <link href="@Url.Content("/css/responsive.css")" rel="stylesheet">

  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body id="page-top">

  <nav class="navbar navbar-expand-lg fixed-top" style="background-color:#0f314c" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" @Html.ActionLink("Raffaele Velotti's WebSite", "Index", new { controller = "Home" }, new { @class = "navbar-brand" })
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>


      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav text-uppercase ml-auto">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" @Html.ActionLink("About", "Index", "About")
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" @Html.ActionLink("Portfolio", "OneColumn", "Portfolio")
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" @Html.ActionLink("Contact", "Index", "Contact")
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </nav>

  @RenderBody()


  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
            <span class="copyright">Copyright &copy; Raffaele Velotti's profile</span>
        </div>
      </div>
    </div>
  </footer>

  <!-- /.container -->
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script> -->
  <!-- <script src="@Url.Content("/js/bootstrap.js")"></script> -->
  <!-- <script src="@Url.Content("/js/modern-business.js")"></script> -->

  <script src="@Url.Content("/vendor/jquery/jquery.min.js")"></script>
  <script src="@Url.Content("/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>

  <!-- Plugin JavaScript -->
  <script src="@Url.Content("/vendor/jquery-easing/jquery.easing.min.js")"></script>

  <!-- Contact form JavaScript -->
  <script src="@Url.Content("/js/jqBootstrapValidation.js")"></script>
  <script src="@Url.Content("/js/contact_me.js")"></script>

  <!-- Custom scripts for this template -->
  <script src="@Url.Content("/js/agency.min.js")"></script>

  <script src="@Url.Content("/lib/bootstrap/js/bootstrap.min.js")"></script>
  <script src="@Url.Content("/lib/owlcarousel/owl.carousel.min.js")"></script>
  <script src="@Url.Content("/lib/venobox/venobox.min.js")"></script>
  <script src="@Url.Content("/lib/knob/jquery.knob.js")"></script>
  <script src="@Url.Content("/lib/wow/wow.min.js")"></script>
  <script src="@Url.Content("/lib/parallax/parallax.js")"></script>
  <script src="@Url.Content("/lib/easing/easing.min.js")"></script>
  <script src="@Url.Content("/lib/nivo-slider/js/jquery.nivo.slider.js")" type="text/javascript"></script>
  <script src="@Url.Content("/lib/appear/jquery.appear.js")"></script>
  <script src="@Url.Content("/lib/isotope/isotope.pkgd.min.js")"></script>

  <script src="@Url.Content("/js/main.js")"></script>

</body>
</html>